int ChuVi(int width, int height){
      return (height + width) * 2;
}
int DienTich(int width, int height) {
     return width * height;
}

void RectangleDrawer(int width, int height) {
    for (int i = 0; i < height; i++) {
        for (int j = 0; j < width; j++) {
            if (i == 0 || i == height - 1) cout << "*";
            else
                if (j == 0 || j == width - 1) cout << "*";
                else cout << " ";
        }
        cout << endl;
    }
}
